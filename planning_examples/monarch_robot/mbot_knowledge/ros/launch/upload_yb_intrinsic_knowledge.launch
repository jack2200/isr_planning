<?xml version="1.0"?>
<launch>

    <!-- Uploads semantic information about youbot that will not come from refbox -->

    <!-- pddl problem that will be loaded as instrinsic knowledge -->
    <arg name="domain" default="isr_demo" />
    <arg name="domain_path" default="$(find mbot_knowledge)/common/pddl/$(arg domain)" />
    <arg name="pddl_problem" default="minimum_required_facts" />

    <!-- upload knowledge to the knowledge base from PDDL problem definition -->
    <node   pkg="mcr_knowledge" type="upload_knowledge" name="upload_knowledge" 
        output="screen" args="$(arg domain_path)/problems/$(arg pddl_problem).pddl"/>

</launch>